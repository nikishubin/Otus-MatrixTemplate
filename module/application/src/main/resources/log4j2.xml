<configuration scan="true" scanPeriod="10 seconds">
    <appenders>
        <console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n"/>
        </console>
    </appenders>

    <loggers>
        <root level="info">
            <AppenderRef ref="STDOUT"/>
        </root>
    </loggers>
</configuration>
